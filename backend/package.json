{
  "name": "jules-control-room-backend",
  "version": "0.1.0",
  "description": "Secure real-time backend for the Jules Control Room",
  "type": "module",
  "main": "dist/server.js",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "npm run lint:ci",
    "lint:fix": "eslint src --ext .ts --cache --fix",
    "lint:ci": "eslint src --ext .ts --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.1.0",
    "sql.js": "^1.9.0",
    "uuid": "^9.0.1",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "nock": "^13.5.4",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
