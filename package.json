{
  "name": "jules-control-room",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for the Jules Control Room backend",
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "dev": "npm --workspace backend run dev",
    "build": "npm --workspace backend run build",
    "start": "npm --workspace backend run start",
    "lint": "npm --workspace backend run lint",
    "lint:fix": "npm --workspace backend run lint:fix",
    "lint:ci": "npm --workspace backend run lint:ci",
    "typecheck": "npm --workspace backend run typecheck",
    "test": "npm --workspace backend run test"
  }
}
